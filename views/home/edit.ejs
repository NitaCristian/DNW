<div class="container">
    <h1 class="mt-5">Edit Blog</h1>

    <form action="/update" method="POST">
        <div class="form-group">
            <label for="blog_name">Title
                <input type="text" class="form-control" id="title" name="title" value="<%= title %>" required>
            </label>
        </div>
        <div class="form-group">
            <label for="first_name">Description
                text
                <textarea class="form-control summernote-editor" id="description" name="description" rows="4" required>
                    <%- description %>
                </textarea>
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
