<div class="container">
    <h1 class="mt-4">Author - Home Page</h1>

    <div class="mt-4">
        <a href="/articles/create" class="btn btn-success">Create New Article</a>
        <a href="/edit" class="btn btn-info">Settings</a>
    </div>

    <h2 class="mt-5">Published Articles</h2>
    <% if (published_articles.length > 0) { %>
        <div class="row mt-4">
            <% published_articles.forEach((article) => { %>
                <%- include('../partials/published_article', { article: article }) %>
            <% }) %>
        </div>
    <% } else { %>
        <p>No published articles found.</p>
    <% } %>

    <h2 class="mt-5">Draft Articles</h2>
    <% if (draft_articles.length > 0) { %>
        <div class="row mt-4">
            <% draft_articles.forEach((article) => { %>
                <%- include('../partials/draft_article', { article: article }) %>
            <% }) %>
        </div>
    <% } else { %>
        <p>No draft articles found.</p>
    <% } %>
</div>
