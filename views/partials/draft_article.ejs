<div class="col-md-6 mb-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <h6 class="card-subtitle mt-1"><%= article.subtitle %></h6>
            <div class="card-body">
                <p class="card-text"><%= article.content %></p>
                <p class="card-text">
                    Created at: <%= article.created_at %> <br>
                    Modified at: <%= article.modified_at %> <br>
                    Content: <%= article.content %>
                </p>
            </div>
            <div class="float-start">
                <a href="/articles/<%= article.id %>/edit" class="btn btn-primary btn-sm mr-2">Edit</a>

                <a href="/articles/<%= article.id %>/" class="btn btn-primary btn-sm mr-2">Read</a>

                <form action="/articles/<%= article.id %>/delete" method="POST">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>

                <form action="/articles/<%= article.id %>/publish" method="POST">
                    <button type="submit" class="btn btn-warning btn-sm">Publish</button>
                </form>

            </div>
        </div>
    </div>
</div>