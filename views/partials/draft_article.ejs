<div class="col-md-6 mb-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center"><%= article.title %></h5>
            <h6 class="card-subtitle text-center"><%= article.subtitle %></h6>
            <p class="card-text text-center text-muted mt-1">
                by <%= article.author_name %>
            </p>
            <div class="card-body">
                <p class="card-text">
                    Created at: <%= article.created_at %> <br>
                    Modified at: <%= article.modified_at %>
                </p>
            </div>
            <div class="float-left">
                <a href="/articles/<%= article.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                <a href="/articles/<%= article.id %>/" class="btn btn-primary btn-sm">Read</a>
                <form action="/articles/<%= article.id %>/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
                <form action="/articles/<%= article.id %>/publish" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-warning btn-sm">Publish</button>
                </form>
            </div>
        </div>
    </div>
</div>
