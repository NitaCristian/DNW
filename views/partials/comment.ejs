<div class="card mt-2">
    <div class="card-body">
        <p class="card-text">
            <%= comment.message %> <br>
            <small>by <%= comment.author_name %> on <%= comment.created_at %></small>
        </p>
        <div>
            <form action="/comments/<%= comment.id %>/delete" method="POST"
                  style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </div>
    </div>
</div>